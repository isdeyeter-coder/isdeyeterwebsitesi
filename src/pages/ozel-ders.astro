            </p>
            <div class="btn-group">
                <a href="#kategoriler" class="btn btn-primary">
                    <i class="fas fa-book-open"></i>
                    Dersleri Keşfet
                </a>
                <a href={`https://wa.me/${whatsapp}?text=Merhaba,%20Özel%20Dersler%20hakkında%20bilgi%20almak%20istiyorum`} target="_blank" class="btn btn-whatsapp">
                    <i class="fab fa-whatsapp"></i>
                    {whatsappText}
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats" id="istatistikler">
    <div class="container">
        <div class="grid-stats">
            {stats.map((stat, index) => (
                <div class="stat-item" key={index}>
                    <div class="stat-icon">
                        <i class={stat.icon}></i>
                    </div>
                    <div class="stat-number">{stat.number}</div>
                    <div class="stat-label">{stat.label}</div>
                </div>
            ))}
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="categories" id="kategoriler">
    <div class="container">
        <div class="section-title">
            <span>DERS KATEGORİLERİ</span>
            <h2>İhtiyacınıza Uygun Dersi Seçin</h2>
            <p>Alanında uzman eğitmenlerden birebir özel ders alın</p>
        </div>

        {categories.map((category, catIndex) => (
            <div class="category-section" id={category.id} key={catIndex}>
                <div class="category-header">
                    <div class="category-icon" style={`background: linear-gradient(135deg, ${category.color.includes('from-') ? category.color.split(' ')[0].replace('from-', 'var(--') : '#3B82F6'} 0%, ${category.color.includes('to-') ? category.color.split(' ')[1].replace('to-', 'var(--') : '#8B5CF6'} 100%);`}>
                        <i class={category.icon}></i>
                    </div>
                    <div class="category-info">
                        <h3>{category.title}</h3>
                        <p>{category.description}</p>
                    </div>
                </div>

                <div class="courses-grid">
                    {category.courses.map((course, courseIndex) => (
                        <div class="course-card" key={courseIndex}>
                            <div class="course-image-container">
                                <img 
                                    src={course.image} 
                                    alt={course.title}
                                    class="course-image"
                                    loading="lazy"
                                />
                            </div>
                            <h4 class="course-title">{course.title}</h4>
                            <a 
                                href={`https://wa.me/${whatsapp}?text=Merhaba,%20${encodeURIComponent(course.title)}%20almak%20istiyorum`}
                                target="_blank"
                                class="btn btn-course"
                            >
                                <i class="fab fa-whatsapp"></i>
                                {buttonText}
                            </a>
                        </div>
                    ))}
                </div>
            </div>
        ))}
    </div>
</section>

