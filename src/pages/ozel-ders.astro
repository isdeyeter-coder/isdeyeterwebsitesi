<BasicLayout title="Özel Ders | İş de YETER - Birebir Eğitim ve Kurslar">

<!-- Hero Section -->
<section class="hero" id="hero">
    <div class="hero-bg"></div>
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">
                <span style="color: #1F2937;">{heroTitle}</span>
