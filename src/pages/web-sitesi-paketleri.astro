            background: linear-gradient(135deg, #1a237e 0%, #283593 100%);
            color: white;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
            margin-top: 50px;
        }

        .feature-card {
            text-align: center;
            padding: 30px 20px;
            background: rgba(255,255,255,0.1);
            border-radius: 15px;
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }

        .feature-card:hover {
            background: rgba(255,255,255,0.2);
            transform: translateY(-5px);
        }

        .feature-card i {
            font-size: 3rem;
            margin-bottom: 20px;
            color: #4CAF50;
        }

        .feature-card h3 {
            font-size: 1.2rem;
            margin-bottom: 10px;
        }

        .feature-card p {
            font-size: 0.95rem;
            opacity: 0.9;
        }

        /* FAQ Section */
        .faq-section {
            padding: 80px 0;
            background: #f8f9fa;
        }

        .faq-container {
            max-width: 800px;
            margin: 0 auto;
        }

        .faq-item {
            background: white;
            border-radius: 12px;
            margin-bottom: 15px;
            overflow: hidden;
            box-shadow: 0 3px 15px rgba(0,0,0,0.05);
        }

        .faq-question {
            padding: 20px 25px;
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-weight: 600;
            color: #1a237e;
            transition: background 0.3s ease;
        }

        .faq-question:hover {
            background: #f8f9fa;
        }

        .faq-question i {
            transition: transform 0.3s ease;
            color: #4CAF50;
        }

        .faq-item.active .faq-question i {
            transform: rotate(180deg);
        }

        .faq-answer {
            padding: 0 25px;
            max-height: 0;
            overflow: hidden;
            transition: all 0.3s ease;
            color: #666;
        }

        .faq-item.active .faq-answer {
            padding: 0 25px 20px;
            max-height: 500px;
        }

        /* CTA Section */
        .cta-section {
            background: linear-gradient(135deg, #1a237e 0%, #283593 100%);
            color: white;
            padding: 100px 0;
            text-align: center;
        }

        .cta-content {
            max-width: 700px;
            margin: 0 auto;
        }

        .cta-content h2 {
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        .cta-content p {
            font-size: 1.2rem;
            opacity: 0.95;
            margin-bottom: 30px;
        }

        .cta-buttons {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        .btn-whatsapp-large {
            background: #25D366;
            color: white;
            padding: 18px 45px;
            font-size: 1.15rem;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(37, 211, 102, 0.4);
        }

        .btn-whatsapp-large:hover {
            background: #128C7E;
            transform: scale(1.05);
            box-shadow: 0 15px 40px rgba(37, 211, 102, 0.5);
        }

        /* Footer */
        footer {
            background: #1a1a2e;
            color: white;
            padding: 50px 0 30px;
        }

        .footer-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 40px;
            margin-bottom: 40px;
        }

        .footer-col h3 {
            font-size: 1.2rem;
            margin-bottom: 20px;
            color: #4CAF50;
        }

        .footer-col ul {
            list-style: none;
        }

        .footer-col ul li {
            margin-bottom: 10px;
        }

        .footer-col ul li a {
            color: #ccc;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .footer-col ul li a:hover {
            color: #4CAF50;
        }

        .footer-bottom {
            border-top: 1px solid #333;
            padding-top: 30px;
            text-align: center;
        }

        .footer-bottom p {
            opacity: 0.8;
            font-size: 0.9rem;
        }

        .footer-bottom a {
            color: #4CAF50;
            text-decoration: none;
        }

        /* Stats Section */
        .stats-section {
            background: white;
            padding: 60px 0;
            border-bottom: 1px solid #eee;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 30px;
            text-align: center;
        }

        .stat-item h3 {
            font-size: 2.5rem;
            color: #1a237e;
            margin-bottom: 10px;
        }

        .stat-item p {
            color: #666;
            font-size: 1rem;
        }

        /* Responsive */
        @media (max-width: 992px) {
            .hero-grid {
                grid-template-columns: 1fr;
            }

            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            header h1 {
                font-size: 2.2rem;
            }
        }

        @media (max-width: 768px) {
            .services-grid {
                grid-template-columns: 1fr;
            }

            .packages-grid {
                grid-template-columns: 1fr;
            }

            .cta-buttons {
                flex-direction: column;
                align-items: center;
            }

            .testimonial-before-after {
                grid-template-columns: 1fr;
            }

            .hero-features {
                grid-template-columns: 1fr;
            }

            .section-title h2 {
                font-size: 1.8rem;
            }
        }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <h1>Profesyonel Web Sitesi Paketleri</h1>
            <p>Dijital dünyada şirketinizin kimliğini yansıtan, SEO dostu ve mobil uyumlu web sitesi paketleri ile tanışın.</p>
        </div>
    </header>

    <section class="stats-section">
        <div class="container">
            <div class="stats-grid">
                <div class="stat-item">
                    <h3>1.8M+</h3>
                    <p>Dünya Genelinde Web Sitesi</p>
                </div>
                <div class="stat-item">
                    <h3>%60</h3>
                    <p>SEO Hizmeti Alan Site</p>
                </div>
                <div class="stat-item">
                    <h3>50M+</h3>
                    <p>Günlük Ziyaretçi</p>
                </div>
                <div class="stat-item">
                    <h3>25+</h3>
                    <p>Uzman Kadromuz</p>
                </div>
            </div>
        </div>
    </section>

    <section class="hero-section">
        <div class="container">
            <div class="hero-grid">
                <div class="hero-text">
                    <h2>Web Paketlerimizle Dijital Dünyada Yerinizi Alın</h2>
                    <p>Web siteniz, dijital dünyada şirketinizin kimliğidir. İş de Yeter Web Tasarım, her sektöre ve ihtiyaca uygun profesyonel, SEO dostu ve mobil uyumlu web sitesi paketleri sunar.</p>
                    <p>Paketlerimiz dilediğiniz zaman yükseltilebilir ve e-ticaret paketlerine dönüştürülebilir.</p>
                    <div class="hero-features">
                        <div class="hero-feature">
                            <i class="fas fa-check-circle"></i>
                            <span>Mobil Uyumlu Tasarım</span>
                        </div>
                        <div class="hero-feature">
                            <i class="fas fa-check-circle"></i>
                            <span>SEO Optimizasyonu</span>
                        </div>
                        <div class="hero-feature">
                            <i class="fas fa-check-circle"></i>
                            <span>Türkçe Yönetim Paneli</span>
                        </div>
                        <div class="hero-feature">
                            <i class="fas fa-check-circle"></i>
                            <span>Sınırsız Blog İçeriği</span>
                        </div>
                    </div>
                </div>
                <div class="hero-image">
                    <img src="/img/dijital-isler/web-tasarim-banner.jpg" alt="Web Tasarım Hizmetleri" style="width: 100%; border-radius: 20px; box-shadow: 0 20px 50px rgba(0,0,0,0.15);" onerror="this.style.display='none'" />
                </div>
            </div>
        </div>
    </section>

    <section class="packages-section">
        <div class="container">
            <div class="section-title">
                <h2>Web Sitesi Paketleri</h2>
                <p>İhtiyacınıza uygun paketi seçin, dijital varlığınızı güçlendirin. Tüm paketlerimiz profesyonel kalite ve destekle birlikte gelir.</p>
            </div>
            <div class="packages-grid">
                {webPackages.map((pkg) => (
                    <div class="package-card">
                        <div class="package-icon">
                            <i class={pkg.icon}></i>
                        </div>
                        <h3>{pkg.name}</h3>
                        <div class="package-price">{pkg.price}</div>
                        {pkg.originalPrice !== pkg.price && (
                            <div class="package-original">{pkg.originalPrice}</div>
                        )}
                        <ul class="package-features">
                            {pkg.features.map((feature) => (
                                <li>
                                    <i class="fas fa-check"></i>
                                    {feature}
                                </li>
                            ))}
                        </ul>
                        <a href={getWhatsAppLink(pkg.name)} class="btn btn-whatsapp" target="_blank">
                            <i class="fab fa-whatsapp"></i>
                            {buttonText}
                        </a>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <section class="features-section">
        <div class="container">
            <div class="section-title" style="color: white;">
                <h2 style="color: white;">Neden Profesyonel Web Sitesi?</h2>
                <p style="color: rgba(255,255,255,0.9);">Web sitenizin başarısı için uzman desteği almanın faydaları</p>
            </div>
            <div class="features-grid">
                <div class="feature-card">
                    <i class="fas fa-rocket"></i>
                    <h3>Daha Fazla Trafik</h3>
                    <p>SEO çalışmaları ile organik trafik ve satışlarınızı artırın</p>
                </div>
                <div class="feature-card">
                    <i class="fas fa-trophy"></i>
                    <h3>Üst Sıralar</h3>
                    <p>Google aramalarında üst sıralarda yer alarak marka bilinirliğinizi artırın</p>
                </div>
                <div class="feature-card">
                    <i class="fas fa-shield-alt"></i>
                    <h3>Güvenlik</h3>
                    <p>SSL sertifikası ve güvenlik önlemleri ile verilerinizi koruyun</p>
                </div>
                <div class="feature-card">
                    <i class="fas fa-bolt"></i>
                    <h3>Hız Optimizasyonu</h3>
                    <p>Hızlı yüklenen siteler ile kullanıcı deneyimini iyileştirin</p>
                </div>
                <div class="feature-card">
                    <i class="fas fa-sync-alt"></i>
                    <h3>Sürekli Güncelleme</h3>
                    <p>Site haritası ve teknik optimizasyonlarla güncel kalın</p>
                </div>
                <div class="feature-card">
                    <i class="fas fa-chart-line"></i>
                    <h3>Analiz ve Raporlama</h3>
                    <p>Düzenli analizler ile performansınızı takip edin</p>
                </div>
            </div>
        </div>
    </section>

    <section class="services-section">
        <div class="container">
            <div class="section-title">
                <h2>Dijital Hizmetlerimiz</h2>
                <p>Geniş hizmet yelpazemiz ile tüm dijital ihtiyaçlarınızı karşılıyoruz. Uzman kadromuzla projelerinizi hayata geçiriyoruz.</p>
            </div>
            <div class="services-grid">
                {mainServices.map((service) => (
                    <div class="service-card">
                        <div class="service-image">
                            <img src={service.image} alt={service.title} loading="lazy" onerror="this.parentElement.innerHTML='<div class=\'service-icon-overlay\'><i class=\'' + service.icon + '\'></i></div>'" />
                        </div>
                        <div class="service-content">
                            <h3>{service.title}</h3>
                            <p>{service.description}</p>
                            <div class="service-tags">
                                {service.features.map((feature) => (
                                    <span class="service-tag">{feature}</span>
                                ))}
                            </div>
                            <a href={getWhatsAppLink(service.title)} class="btn btn-whatsapp" target="_blank">
                                <i class="fab fa-whatsapp"></i>
                                {buttonText}
                            </a>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <section class="additional-services-section">
        <div class="container">
            <div class="section-title">
                <h2>Diğer Dijital Hizmetler</h2>
                <p>Dijital ihtiyaçlarınız için daha fazla hizmet seçeneği</p>
            </div>
            <div class="services-list">
                {additionalServices.map((service) => (
                    <div class="service-list-item">
                        <div class="service-icon">
                            <i class={service.icon}></i>
                        </div>
                        <div class="service-info">
                            <h4>{service.title}</h4>
                            <span>{service.category}</span>
                        </div>
                        <a href={getWhatsAppLink(service.title)} class="btn btn-whatsapp" target="_blank" style="margin-left: auto;">
                            <i class="fab fa-whatsapp"></i>
                            {buttonText}
                        </a>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <section class="testimonials-section">
        <div class="container">
            <div class="section-title">
                <h2>Müşteri Yorumları</h2>
                <p>Hizmetlerimizden yararlanan müşterilerimizin deneyimleri</p>
            </div>
            <div class="testimonials-grid">
                {testimonials.map((testimonial) => (
                    <div class="testimonial-card">
                        <div class="testimonial-header">
                            <div class="testimonial-avatar">
                                {testimonial.name.split(' ').map(n => n[0]).join('')}
                            </div>
                            <div class="testimonial-info">
                                <h4>{testimonial.name}</h4>
                                <span>{testimonial.company}</span>
                            </div>
                        </div>
                        <span class="testimonial-service">{testimonial.service}</span>
                        <div class="testimonial-before-after">
                            <div class="ba-item ba-before">
                                <strong>Önce</strong>
                                {testimonial.before}
                            </div>
                            <div class="ba-item ba-after">
                                <strong>Sonra</strong>
                                {testimonial.after}
                            </div>
                        </div>
                        <div class="testimonial-rating">
                            {[...Array(testimonial.rating)].map(() => (
                                <i class="fas fa-star"></i>
                            ))}
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <section class="faq-section">
        <div class="container">
            <div class="section-title">
                <h2>Sıkça Sorulan Sorular</h2>
                <p>Web sitesi paketleri hakkında merak ettiğiniz soruların cevapları</p>
            </div>
            <div class="faq-container">
                {faqs.map((faq, index) => (
                    <div class="faq-item">
                        <div class="faq-question">
                            {faq.question}
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        <div class="faq-answer">
                            {faq.answer}
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <section class="cta-section">
        <div class="container">
            <div class="cta-content">
                <h2>Web Sitenizi Hemen Oluşturun</h2>
                <p>Profesyonel ekibimizle web sitenizi tasarlayalım. Hemen WhatsApp üzerinden teklif alın, projenizi başlatın.</p>
                <div class="cta-buttons">
                    <a href={`https://wa.me/${whatsappNumber}?text=Merhaba,%20web%20sitesi%20paketi%20hakkında%20bilgi%20almak%20istiyorum`} class="btn btn-whatsapp-large" target="_blank">
                        <i class="fab fa-whatsapp"></i>
                        Hemen Teklif Al
                    </a>
                </div>
            </div>
        </div>
    </section>

    

    <script>
        // FAQ Accordion
        document.querySelectorAll('.faq-question').forEach(question => {
            question.addEventListener('click', () => {
                const item = question.parentElement;
                const isActive = item.classList.contains('active');
                
                document.querySelectorAll('.faq-item').forEach(faq => {
                    faq.classList.remove('active');
                });

                if (!isActive) {
                    item.classList.add('active');
                }
            });
        });
    </script>
</body>
</html>
