---
// src/pages/muhasebe-programinin-ozellikleri.astro

import BasicLayout from '../layouts/BasicLayout.astro';
import configData from './data/config.json';  // config dosyasını import ediyoruz

const images = {
  general: "/img/muhasebe/Stok-pratik-genel.png",
  efatura: "/img/muhasebe/stok-pratik-efatura.jpg",
  hesap: "/img/muhasebe/Stok-pratik-ekran-giris.png",
  hesaplama: "/img/muhasebe/Stok-pratik-ekran-2.png",
  hesaplamalar: "/img/muhasebe/Stok-pratik-ekran-1.png"
};

// Config dosyasından WhatsApp numarasını alıyoruz
const whatsappNumber = configData.whatsapp;

const temelOzellikler = [
  {
    icon: "fas fa-store",
    title: "Mağazacılık",
    description: "Tek merkezden stok, satış ve cari takibi ile mağaza yönetimini kolaylaştırın."
  },
  {
    icon: "fas fa-sync-alt",
    title: "ERP",
    description: "Üretimden muhasebeye tüm işletme süreçlerini entegre şekilde yönetin."
  },
  {
    icon: "fas fa-shopping-cart",
    title: "E-Ticaret",
    description: "Online mağazalarınızla entegre çalışarak siparişleri otomatik alın."
  },
  {
    icon: "fas fa-cloud",
    title: "Bulut Muhasebe",
    description: "Kurulum gerektirmeden, internet olduğu her yerden 7/24 muhasebe işlemlerinizi yapın."
  },
  {
    icon: "fas fa-mobile-alt",
    title: "Mobil Uyumlu",
    description: "Telefon, tablet, bilgisayar… Tüm cihazlardan sorunsuz erişim."
  },
  {
    icon: "fas fa-code-branch",
    title: "Çok Şube Yönetimi",
    description: "Birden fazla şubenizin tüm işlemlerini tek merkezden yönetin."
  },
  {
    icon: "fas fa-barcode",
    title: "Barkodlu Çalışma",
    description: "Barkod okuyucu ile hızlı, hatasız stok ve satış işlemleri."
  },
  {
    icon: "fas fa-store",
    title: "Banka Entegrasyonu",
    description: "Banka hesaplarınızla entegre çalışarak tüm muhasebe işlemlerini otomatikleştirin."
  }
];

const nedenStokPratik = [
  {
    icon: "fas fa-bolt",
    title: "Kurulumsuz Başlangıç",
    description: "Sadece internete bağlanın, hemen kullanmaya başlayın. Hiçbir teknik kurulum gerektirmez.",
    items: [
      "Sıfır kurulum maliyeti",
      "Anında erişim",
      "Teknik bilgi gerekmez"
    ]
  },
  {
    icon: "fas fa-shield-alt",
    title: "Güvenli Bulut Teknolojisi",
    description: "Verileriniz en güvenli bulut altyapısında saklanır, yedeklenir ve korunur.",
    items: [
      "256-bit şifreleme",
      "Otomatik yedekleme",
      "ISO 27001 sertifikalı"
    ]
  },
  {
    icon: "fas fa-headset",
    title: "7/24 Destek",
    description: "Teknik destek ekibimiz her zaman yanınızda. WhatsApp, telefon veya e-posta ile ulaşabilirsiniz.",
    items: [
      "WhatsApp destek",
      "Telefon desteği",
      "E-posta desteği"
    ]
  }
];

const karsilastirma = {
  baslik: "Stok Pratik vs Geleneksel Sistemler",
  stokpratik: [
    "✓ Bulut tabanlı, her yerden erişim",
    "✓ Otomatik güncellemeler",
    "✓ Sınırsız kullanıcı desteği",
    "✓ Düşük başlangıç maliyeti",
    "✓ Entegre çözümler"
  ],
  geleneksel: [
    "✗ Lokasyon bağımlılığı",
    "✗ Manuel güncellemeler",
    "✗ Lisans başına ücret",
    "✗ Yüksek yatırım maliyeti",
    "✗ Bağımsız sistemler"
  ]
};

const kullaniciYorumlari = [
  {
    name: "Ahmet Y.",
    role: "Perakende İşletme Sahibi",
    comment: "3 şubemizi tek panelden yönetiyoruz. İşlerimiz %40 hızlandı.",
    rating: 5
  },
  {
    name: "Zeynep K.",
    role: "E-Ticaret Girişimcisi",
    comment: "Pazaryeri entegrasyonları hayat kurtardı. Her şey otomatik!",
    rating: 5
  },
  {
    name: "Mehmet T.",
    role: "Muhasebe Müdürü",
    comment: "Raporlama süremiz 2 günden 2 saate düştü. İnanılmaz!",
    rating: 5
  }
];
---

<BasicLayout title="Stok Pratik Özellikleri | Tüm Modüller ve Yenilikler">

<!-- Hero Section -->
<section class="hero">
    <div class="hero-bg"></div>
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">Bulut Tabanlı En Hızlı Stok & Muhasebe Yazılımı</h1>
            <p class="hero-slogan">"Stok Takibi Pratik, İş Yönetimi Daha Kolay!"</p>
            <p class="hero-description">
                Stok Pratik, işletmenizin tüm süreçlerini dijitalleştiren, kurulum gerektirmeyen ve her cihazdan anında erişilebilen bulut tabanlı yönetim yazılımıdır.
            </p>
            <div class="hero-buttons">
                <a 
                    href={`https://wa.me/${whatsappNumber}?text=Merhaba,%20Stok%20Pratik%20demo%20talep%20ediyorum`}
                    target="_blank" 
                    class="btn btn-primary"
                >
                    <i class="fas fa-play-circle"></i>
                    Demo Talep Et
                </a>
                <a href="/paketlerimiz" class="btn btn-outline">
                    <i class="fas fa-box-open"></i>
                    Paketleri İncele
                </a>
                <a 
                    href={`https://wa.me/${whatsappNumber}?text=Merhaba,%20Stok%20Pratik%20fiyat%20teklifi%20alıyorum`}
                    target="_blank" 
                    class="btn btn-whatsapp"
                >
                    <i class="fab fa-whatsapp"></i>
                    Fiyat Teklifi Al
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Özellikler Grid -->
<section class="ozellikler-section">
    <div class="container">
        <div class="section-header">
            <h2>Stok Pratik'in Güçlü Özellikleri</h2>
            <p>İşletmenizin tüm ihtiyaçları için kapsamlı çözümler</p>
        </div>
        
        <div class="ozellikler-grid">
            {temelOzellikler.map((ozellik, index) => (
                <div class="ozellik-kart" key={index}>
                    <div class="ozellik-icon">
                        <i class={ozellik.icon}></i>
                    </div>
                    <h3>{ozellik.title}</h3>
                    <p>{ozellik.description}</p>
                </div>
            ))}
        </div>
    </div>
</section>

<!-- Fiziksel Mağaza ve Online -->
<section class="feature-section">
    <div class="container">
        <div class="feature-grid">
            <div class="feature-content">
                <h2>Fiziksel Mağazanız ve Pazaryeri Aynı Ekranda</h2>
                <p>
                    Geleneksel mağaza işlemlerinizi ve online pazaryeri satışlarınızı tek bir platformda birleştirin. 
                    Stok, satış ve müşteri takibini merkezi olarak yönetin, verimliliğinizi maksimuma çıkarın.
                </p>
                <a href="/muhasebe-paketleri" class="btn btn-outline">
                    <i class="fas fa-arrow-right"></i>
                    Paketleri incele
                </a>
            </div>
            <div class="feature-image">
                <img 
                    src={images.general} 
                    alt="Stok Pratik Fiziksel Mağaza ve Online Pazaryeri Entegrasyonu" 
                    width="800" 
                    height="600"
                    loading="lazy"
                    class="feature-img"
                />
            </div>
        </div>
    </div>
</section>

<!-- E-Fatura Section -->
<section class="efatura-section">
    <div class="container">
        <div class="section-header">
            <h2>e-Fatura Entegrasyonlarımız</h2>
            <p>Stok Pratik ile e-fatura süreçlerinizi otomatikleştirin</p>
        </div>
        
        <div class="feature-grid reversed">
            <div class="feature-image">
                <img 
                    src={images.efatura} 
                    alt="Stok Pratik e-Fatura Entegrasyonu Ekran Görüntüsü" 
                    width="800" 
                    height="600"
                    loading="lazy"
                    class="feature-img"
                />
            </div>
            <div class="feature-content">
                <div class="feature-badge">
                    <i class="fas fa-file-invoice"></i>
                    Tam Entegre
                </div>
                <h3>Otomatik Fatura Süreçleri</h3>
                <p>
                    Tüm fatura işlemlerinizi hızlı, güvenli ve hatasız şekilde yönetin. 
                    Vergi düzenlemelerine tam uyumlu, kullanımı kolay e-fatura çözümümüz ile zaman kazanın.
                </p>
                <ul class="feature-list">
                    <li><i class="fas fa-check"></i> E-fatura ve e-arşiv</li>
                    <li><i class="fas fa-check"></i> Otomatik müşteri bilgisi</li>
                    <li><i class="fas fa-check"></i> Vergi düzenlemelerine uyum</li>
                    <li><i class="fas fa-check"></i> SMS/Email ile bildirim</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<!-- Neden Stok Pratik -->
<section class="neden-section">
    <div class="container">
        <div class="section-header">
            <h2>Neden Stok Pratik?</h2>
            <p>İşletmenizi büyütmek için ihtiyacınız olan tüm araçlar tek platformda</p>
        </div>
        
        <div class="neden-grid">
            {nedenStokPratik.map((neden, index) => (
                <div class="neden-kart" key={index}>
                    <div class="neden-icon">
                        <i class={neden.icon}></i>
                    </div>
                    <h3>{neden.title}</h3>
                    <p>{neden.description}</p>
                    <ul class="neden-list">
                        {neden.items.map((item, i) => (
                            <li key={i}>
                                <i class="fas fa-check-circle"></i>
                                {item}
                            </li>
                        ))}
                    </ul>
                </div>
            ))}
        </div>
    </div>
</section>

<!-- Karşılaştırma Section -->
<section class="karsilastirma-section">
    <div class="container">
        <div class="section-header">
            <h2>{karsilastirma.baslik}</h2>
            <p>Hangisi işletmeniz için daha uygun?</p>
        </div>
        
        <div class="karsilastirma-grid">
            <div class="karsilastirma-kart pratik-kart">
                <div class="kart-header">
                    <i class="fas fa-rocket"></i>
                    <h3>Stok Pratik</h3>
                </div>
                <ul class="ozellik-list">
                    {karsilastirma.stokpratik.map((ozellik, index) => (
                        <li key={index}>{ozellik}</li>
                    ))}
                </ul>
                <div class="kart-footer">
                    <span class="oneri-tag">MODERN ÇÖZÜM</span>
                </div>
            </div>
            
            <div class="karsilastirma-kart geleneksel-kart">
                <div class="kart-header">
                    <i class="fas fa-desktop"></i>
                    <h3>Geleneksel Sistemler</h3>
                </div>
                <ul class="ozellik-list">
                    {karsilastirma.geleneksel.map((ozellik, index) => (
                        <li key={index}>{ozellik}</li>
                    ))}
                </ul>
                <div class="kart-footer">
                    <span class="uyari-tag">ESKİ TEKNOLOJİ</span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Kullanıcı Yorumları -->
<section class="yorumlar-section">
    <div class="container">
        <div class="section-header">
            <h2>Kullanıcılarımız Ne Diyor?</h2>
            <p>Stok Pratik sistemimizi kullanan işletmelerin deneyimleri</p>
        </div>
        
        <div class="yorumlar-grid">
            {kullaniciYorumlari.map((yorum, index) => (
                <div class="yorum-kart" key={index}>
                    <div class="yorum-icerik">
                        "{yorum.comment}"
                    </div>
                    <div class="yorum-footer">
                        <div class="yorumcu-info">
                            <div class="yorumcu-avatar">
                                {yorum.name.charAt(0)}
                            </div>
                            <div>
                                <h4>{yorum.name}</h4>
                                <p>{yorum.role}</p>
                            </div>
                        </div>
                        <div class="yorum-rating">
                            {Array.from({length: yorum.rating}).map((_, i) => (
                                <i class="fas fa-star" key={i}></i>
                            ))}
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>

<!-- Ekran Görüntüleri -->
<section class="screenshots-section">
    <div class="container">
        <div class="section-header">
            <h2><i class="fas fa-desktop"></i> Ekran Görüntüleri</h2>
            <p>Stok Pratik'in kullanımı kolay ve güçlü arayüzü</p>
        </div>
        
        <div class="screenshots-grid">
            <div class="screenshot-item">
                <img 
                    src={images.hesap} 
                    alt="Stok Pratik Stok Takip Ekranı" 
                    loading="lazy"
                />
                <div class="screenshot-caption">Stok Takip Ekranı</div>
            </div>
            <div class="screenshot-item">
                <img 
                    src={images.hesaplama} 
                    alt="Stok Pratik Muhasebe Ekranı" 
                    loading="lazy"
                />
                <div class="screenshot-caption">Muhasebe Ekranı</div>
            </div>
            <div class="screenshot-item">
                <img 
                    src={images.hesaplamalar} 
                    alt="Stok Pratik Raporlama Ekranı" 
                    loading="lazy"
                />
                <div class="screenshot-caption">Raporlama Ekranı</div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-final">
    <div class="container">
        <div class="cta-content">
            <h2>Stok Pratik ile İşinizi Büyütmeye Hazır mısınız?</h2>
            <p>Binlerce mutlu müşterimiz gibi siz de iş süreçlerinizi dijitalleştirin, zaman kazanın ve verimliliğinizi artırın.</p>
            <div class="cta-buttons">
                <a 
                    href={`https://wa.me/${whatsappNumber}?text=Merhaba,%20Stok%20Pratik%20demo%20talep%20ediyorum`}
                    target="_blank" 
                    class="btn btn-primary btn-lg"
                >
                    <i class="fas fa-play-circle"></i>
                    Ücretsiz Demo İste
                </a>
                <a href="/paketlerimiz" class="btn btn-outline-white btn-lg">
                    <i class="fas fa-box-open"></i>
                    Paketleri İncele
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    /* Hero Section */
    .hero {
        background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
        padding: 100px 0;
        text-align: center;
        position: relative;
        overflow: hidden;
    }
    
    .hero-bg {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23dc2626' fill-opacity='0.1'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    }
    
    .hero-content {
        position: relative;
        z-index: 1;
        max-width: 800px;
        margin: 0 auto;
    }
    
    .hero-title {
        font-size: 3.5rem;
        color: #dc2626;
        margin-bottom: 1rem;
        font-weight: 800;
    }
    
    .hero-slogan {
        font-size: 1.8rem;
        color: #7f1d1d;
        margin-bottom: 1.5rem;
        font-weight: 600;
    }
    
    .hero-description {
        font-size: 1.2rem;
        color: #4b5563;
        line-height: 1.6;
        margin-bottom: 2.5rem;
    }
    
    .hero-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }
    
    /* Section Header */
    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }
    
    .section-header h2 {
        font-size: 2.5rem;
        color: #1e40af;
        margin-bottom: 1rem;
        font-weight: 700;
    }
    
    .section-header p {
        color: #6b7280;
        font-size: 1.1rem;
        max-width: 600px;
        margin: 0 auto;
    }
    
    /* Özellikler Section */
    .ozellikler-section {
        padding: 80px 0;
        background: white;
    }
    
    .ozellikler-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
    }
    
    .ozellik-kart {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }
    
    .ozellik-kart:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(220, 38, 38, 0.15);
        border-color: #dc2626;
    }
    
    .ozellik-icon {
        font-size: 3rem;
        color: #dc2626;
        margin-bottom: 1.5rem;
    }
    
    .ozellik-kart h3 {
        color: #1e40af;
        margin-bottom: 1rem;
        font-weight: 600;
    }
    
    .ozellik-kart p {
        color: #6b7280;
        line-height: 1.6;
    }
    
    /* Feature Sections */
    .feature-section, .efatura-section {
        padding: 80px 0;
    }
    
    .feature-section {
        background: #f8fafc;
    }
    
    .feature-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
        align-items: center;
    }
    
    @media (min-width: 992px) {
        .feature-grid {
            grid-template-columns: 1fr 1fr;
        }
        
        .feature-grid.reversed {
            direction: rtl;
        }
        
        .feature-grid.reversed > * {
            direction: ltr;
        }
    }
    
    .feature-content h2 {
        font-size: 2.5rem;
        color: #1e40af;
        margin-bottom: 1.5rem;
        font-weight: 700;
    }
    
    .feature-content p {
        color: #6b7280;
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 2rem;
    }
    
    .feature-image {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 15px 30px rgba(0,0,0,0.1);
    }
    
    .feature-img {
        width: 100%;
        height: auto;
        display: block;
        transition: transform 0.3s ease;
    }
    
    .feature-image:hover .feature-img {
        transform: scale(1.02);
    }
    
    .feature-badge {
        display: inline-block;
        background: #10b981;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .feature-list {
        list-style: none;
        padding: 0;
        margin: 1.5rem 0;
    }
    
    .feature-list li {
        padding: 0.5rem 0;
        color: #4b5563;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .feature-list i {
        color: #10b981;
        flex-shrink: 0;
    }
    
    /* Neden Stok Pratik Section */
    .neden-section {
        padding: 80px 0;
        background: white;
    }
    
    .neden-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        max-width: 1000px;
        margin: 0 auto;
    }
    
    .neden-kart {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        border: 2px solid #e5e7eb;
        transition: all 0.3s ease;
    }
    
    .neden-kart:hover {
        border-color: #dc2626;
        transform: translateY(-5px);
    }
    
    .neden-icon {
        font-size: 2.5rem;
        color: #dc2626;
        margin-bottom: 1.5rem;
    }
    
    .neden-kart h3 {
        color: #1e40af;
        margin-bottom: 1rem;
        font-weight: 600;
    }
    
    .neden-kart p {
        color: #6b7280;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }
    
    .neden-list {
        list-style: none;
        padding: 0;
        text-align: left;
    }
    
    .neden-list li {
        padding: 0.5rem 0;
        color: #4b5563;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .neden-list i {
        color: #10b981;
        flex-shrink: 0;
    }
    
    /* Karşılaştırma Section */
    .karsilastirma-section {
        padding: 80px 0;
        background: #f8fafc;
    }
    
    .karsilastirma-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
        max-width: 800px;
        margin: 0 auto;
    }
    
    .karsilastirma-kart {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }
    
    .pratik-kart {
        border: 3px solid #dc2626;
    }
    
    .geleneksel-kart {
        border: 3px solid #9ca3af;
    }
    
