                tag.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-3px)';
                    this.style.boxShadow = '0 6px 20px rgba(0,0,0,0.15)';
                });
                
                tag.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                    this.style.boxShadow = '0 3px 10px rgba(0,0,0,0.08)';
                });
                
                // SADECE tag-cloud iÃ§indeki etiketler iÃ§in tÄ±klama efekti
                tag.addEventListener('click', function(e) {
                    // WhatsApp linklerinin normal Ã§alÄ±ÅŸmasÄ±na izin ver
                    if (this.getAttribute('href').includes('wa.me')) {
                        // Sadece hafif bir animasyon yap
                        this.style.transform = 'scale(0.95)';
                        setTimeout(() => {
                            this.style.transform = 'scale(1)';
                        }, 150);
                        
                        // SayfanÄ±n kaymasÄ±nÄ± engelle
                        e.stopPropagation();
                    }
                });
            });
        });
        
        // Ä°lk bÃ¶lÃ¼mÃ¼ gÃ¶ster (Usta Bul)
        const firstSection = document.getElementById('usta-bul');
        if (firstSection) {
            firstSection.style.display = 'block';
        }
        
        // Scroll olayÄ±nÄ± yÃ¶net - saÄŸdaki etiketler iÃ§in
        let lastScrollTop = 0;
        window.addEventListener('scroll', function() {
            const st = window.pageYOffset || document.documentElement.scrollTop;
            
            // Sadece tag-cloud iÃ§indeki etiketler iÃ§in hover reset
            if (Math.abs(st - lastScrollTop) > 50) {
                document.querySelectorAll('.tag-cloud .tag').forEach(tag => {
                    tag.style.transform = 'translateY(0)';
                    tag.style.boxShadow = '0 3px 10px rgba(0,0,0,0.08)';
                });
                lastScrollTop = st <= 0 ? 0 : st;
            }
        }, false);
    });
