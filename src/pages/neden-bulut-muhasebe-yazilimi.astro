<!-- JavaScript for FAQ Toggle -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // SSS sorularını aç/kapa
        const sssSorular = document.querySelectorAll('.sss-soru');
        
        sssSorular.forEach(soru => {
            soru.addEventListener('click', function() {
                const cevap = this.nextElementSibling;
                const item = this.parentElement;
                
                // Eğer bu cevap zaten açıksa kapat
                if (item.classList.contains('active')) {
                    item.classList.remove('active');
                    this.textContent = this.textContent.replace('−', '+');
                } else {
                    // Diğer tüm cevapları kapat
                    sssSorular.forEach(s => {
                        s.parentElement.classList.remove('active');
                        s.textContent = s.textContent.replace('−', '+');
                    });
                    
                    // Bu cevabı aç
                    item.classList.add('active');
                    this.textContent = this.textContent.replace('+', '−');
                }
            });
        });
        
        // Smooth scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    });
</script>

