            }

            .categories-grid {
                grid-template-columns: 1fr;
            }

            .category-card {
                padding: 25px;
            }

            .whatsapp-btn {
                padding: 15px 30px;
                font-size: 1rem;
            }
        }

        @media (max-width: 480px) {
            .hero-title {
                font-size: 1.8rem;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }

            .whatsapp-btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</BasicLayout>