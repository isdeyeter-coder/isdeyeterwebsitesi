            text-align: center;
            margin-bottom: 50px;
            padding: 0 20px;
        }

        .hero-title {
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--text);
            margin-bottom: 15px;
            line-height: 1.2;
        }

        .hero-subtitle {
            font-size: 1.2rem;
            color: var(--text-light);
            max-width: 600px;
            margin: 0 auto;
        }

        /* Site Haritasƒ± B√∂l√ºm√º */
