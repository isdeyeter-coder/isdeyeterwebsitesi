        /* Temel Ayarlar */
        :root {
            --primary: #3b82f6;
            --primary-dark: #2563eb;
            --secondary: #10b981;
            --text: #1f2937;
            --text-light: #6b7280;
            --background: #ffffff;
            --card-bg: #f8fafc;
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
