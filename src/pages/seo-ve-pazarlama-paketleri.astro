---
// /src/pages/seo-ve-pazarlama-paketleri.astro
import BasicLayout from '../layouts/BasicLayout.astro';
import seoPazarlamaData from './data/seo-pazarlama-fiyatlar.json';
import configData from './data/config.json';

const whatsappNumber = configData.whatsapp;

const heroTitle = "SEO ve Pazarlama Paketleri";
const heroSlogan = "Google'da Üst Sıralarda Yer Alın, Satışlarınızı Artırın";
const heroDescription = "Profesyonel SEO ve dijital pazarlama paketlerimizle online görünürlüğünüzü maksimize edin. E-ticaret siteniz ve pazaryeri hesaplarınız için kapsamlı çözümler sunuyoruz.";

const seoPazarlamaPaketleri = seoPazarlamaData.seoPazarlamaPaketleri;
const ekstraOzellikler = seoPazarlamaData.ekstraOzellikler;
---

<BasicLayout title="SEO ve Pazarlama Paketleri | İş de YETER - Profesyonel Dijital Pazarlama Çözümleri">

<!-- Hero Section -->
<section class="hero" id="hero">
    <div class="hero-bg"></div>
    <div class="container">
        <div class="hero-content" style="margin-top: 40px;">
            <div style="max-width: 800px; margin: 0 auto;">
                <h1 class="hero-title">
                    <span style="color: #1F2937;">{heroTitle}</span>
                </h1>
                <p style="color: #f3003d; font-size: 1.5rem; font-weight: 600; line-height: 1.6; margin-bottom: 20px;">
                    {heroSlogan}
                </p>
                <p class="hero-subtitle">
                    {heroDescription}
                </p>
                <div class="btn-group">
                    <a href="#paketler" class="btn btn-primary">
                        <i class="fas fa-eye"></i>
                        Paketleri İncele
                    </a>
                    <a href={`https://wa.me/${whatsappNumber}?text=Merhaba,%20SEO%20ve%20Pazarlama%20Paketleri%20hakkında%20danışmanlık%20almak%20istiyorum`} target="_blank" class="btn btn-whatsapp">
                        <i class="fab fa-whatsapp"></i>
                        Ücretsiz SEO Analizi
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- SEO ve Pazarlama Paketleri Section -->
<section class="paketler-section" id="paketler">
    <div class="container">
        <div class="section-title">
            <span>SEO VE PAZARLAMA PAKETLERİ</span>
            <h2>Dijital Varlığınızı Güçlendirin</h2>
            <p>İhtiyacınıza uygun SEO ve pazarlama paketi ile online başarınızı garanti altına alın</p>
        </div>
        
        <div class="paketler-grid">
            {seoPazarlamaPaketleri.map((paket) => (
                <div 
                    class={`paket-kart relative ${paket.popular ? 'populer-kart' : ''}`}
                    key={paket.id}
                >
                    {paket.popular && (
                        <div class="popular-badge">
                            <i class="fas fa-fire"></i> EN POPÜLER
                        </div>
                    )}
                    
                    <div class="paket-header">
                        <div class="paket-icon">
                            <i class={paket.icon}></i>
                        </div>
                        <h3>{paket.name}</h3>
                        <p class="paket-tip">{paket.tip}</p>
                        <p class="paket-aciklama">{paket.aciklama}</p>
                    </div>
                    
                    <!-- Fiyat bölümü -->
                    <div class="paket-fiyat">
                        <div class="normal-fiyat">
                            {paket.fiyatlar.normal.toLocaleString('tr-TR')}₺
                        </div>
                        <div class="indirimli-fiyat">
                            {paket.fiyatlar.indirimli.toLocaleString('tr-TR')} ₺/{paket.fiyatlar.periyod}
                        </div>
                        <div class="fiyat-not">
                            İlk 1 ay ücretsiz deneme
                        </div>
                    </div>
                    
                    <!-- Özellikler -->
                    <div class="paket-ozellikler">
                        <ul>
                            {paket.ozellikler.map((ozellik, index) => (
                                <li key={index}>
                                    <i class="fas fa-check-circle"></i>
                                    {ozellik}
                                </li>
                            ))}
                        </ul>
                    </div>
                    
                    <!-- Buton -->
                    <div class="paket-butonlar">
                        <a 
                            href={`https://wa.me/${whatsappNumber}?text=Merhaba,%20${encodeURIComponent(paket.tip)}%20paketi%20hakkında%20bilgi%20almak%20istiyorum`} 
                            target="_blank"
                            class="btn btn-whatsapp w-full"
                        >
                            <i class="fab fa-whatsapp"></i>
                            Bize Ulaş
                        </a>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>

<!-- Ekstra Özellikler Section -->
<section class="ekstra-ozellikler-section">
    <div class="container">
        <div class="section-title">
            <span>KAPSAMLI HİZMETLER</span>
            <h2>Tüm Dijital Pazarlama İhtiyaçlarınız İçin</h2>
            <p>Paketlerimizde sunulan profesyonel hizmetler</p>
        </div>
        
        <div class="ekstra-grid">
            {ekstraOzellikler.map((ekstra, index) => (
                <div class="ekstra-kart" key={index}>
                    <div class="ekstra-icon">
                        <i class={ekstra.icon}></i>
                    </div>
                    <h3>{ekstra.baslik}</h3>
                    <ul class="ekstra-ozellikler">
                        {ekstra.ozellikler.map((ozellik, i) => (
                            <li key={i}>
                                <i class="fas fa-check"></i>
                                {ozellik}
                            </li>
                        ))}
                    </ul>
                </div>
            ))}
        </div>
    </div>
</section>

<!-- Pazaryeri Listesi -->
<section class="pazaryeri-section">
    <div class="container">
        <div class="section-title">
            <span>PAZARYERİ ENTEGRASYONLARI</span>
            <h2>Tüm Pazaryerlerinde Aynı Anda Yönetin</h2>
            <p>Ürünlerinizi en popüler pazaryerlerinde satın</p>
        </div>
        
        <div class="pazaryeri-grid">
            <div class="pazaryeri-item">
                <i class="fas fa-store-alt"></i>
                <span>Trendyol</span>
            </div>
            <div class="pazaryeri-item">
                <i class="fas fa-shopping-cart"></i>
                <span>Hepsiburada</span>
            </div>
            <div class="pazaryeri-item">
                <i class="fab fa-amazon"></i>
                <span>Amazon</span>
            </div>
            <div class="pazaryeri-item">
                <i class="fas fa-tag"></i>
                <span>N11</span>
            </div>
            <div class="pazaryeri-item">
                <i class="fas fa-leaf"></i>
                <span>Çiçek Sepeti</span>
            </div>
            <div class="pazaryeri-item">
                <i class="fas fa-gem"></i>
                <span>Morhipo</span>
            </div>
            <div class="pazaryeri-item">
                <i class="fas fa-shoe-prints"></i>
                <span>Flo</span>
            </div>
            <div class="pazaryeri-item">
                <i class="fas fa-tshirt"></i>
                <span>Modanisa</span>
            </div>
            <div class="pazaryeri-item">
                <i class="fas fa-basket-shopping"></i>
                <span>Pazarama</span>
            </div>
            <div class="pazaryeri-item">
                <i class="fas fa-shirt"></i>
                <span>LCW</span>
            </div>
        </div>
        
        <div class="pazaryeri-ihracat">
            <h3><i class="fas fa-globe-americas"></i> E-İhracat Pazaryerleri</h3>
            <div class="ihracat-grid">
                <div class="ihracat-item">
                    <i class="fab fa-etsy"></i>
                    <span>Etsy</span>
                </div>
                <div class="ihracat-item">
                    <i class="fas fa-box"></i>
                    <span>Ozon</span>
                </div>
                <div class="ihracat-item">
                    <i class="fab fa-amazon"></i>
                    <span>Amazon Global</span>
                </div>
                <div class="ihracat-item">
                    <i class="fas fa-plane"></i>
                    <span>AliExpress</span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
    <div class="container">
        <div class="cta-content">
            <h2>Ücretsiz SEO Analizi Yaptırmak İster misiniz?</h2>
            <p>Web sitenizin mevcut SEO performansını ücretsiz analiz edelim ve iyileştirme önerileri sunalım.</p>
            <div class="cta-buttons">
                <a 
                    href={`https://wa.me/${whatsappNumber}?text=Merhaba,%20ücretsiz%20SEO%20analizi%20yaptırmak%20istiyorum`} 
                    target="_blank"
                    class="btn btn-whatsapp btn-lg"
                >
                    <i class="fab fa-whatsapp"></i>
                    Ücretsiz SEO Analizi Talep Et
                </a>
                <a href="#paketler" class="btn btn-outline btn-lg">
                    Paketleri Tekrar İncele
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    /* Hero Section - SEO Tema (Yeşil/Mavi) */
    .hero {
        background: linear-gradient(135deg, #f0f9ff 0%, #dcfce7 100%);
        padding: 80px 0;
        position: relative;
        overflow: hidden;
    }
    
    .hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%2310B981' fill-opacity='0.1'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    }
    
    .hero-content {
        position: relative;
        z-index: 1;
    }
    
    /* Section Title */
    .section-title {
        text-align: center;
        margin-bottom: 50px;
    }
    
    .section-title span {
        display: block;
        color: #10B981;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 10px;
        font-weight: 600;
    }
    
    .section-title h2 {
        color: #1F2937;
        font-size: 2.5rem;
        margin-bottom: 15px;
        font-weight: 700;
    }
    
    .section-title p {
        color: #6B7280;
        font-size: 1.1rem;
        max-width: 600px;
        margin: 0 auto;
    }
    
    /* Paket Kartları - SEO Tema (Yeşil) */
    .paketler-section {
        padding: 80px 0;
        background: #f8fafc;
    }
    
    .paketler-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 30px;
        margin-top: 50px;
    }
    
    .paket-kart {
        background: white;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        position: relative;
        transition: all 0.3s ease;
        border: 2px solid transparent;
        display: flex;
        flex-direction: column;
    }
    
    .paket-kart:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(16, 185, 129, 0.1);
    }
    
    .populer-kart {
        border: 2px solid #10B981;
        transform: scale(1.02);
        box-shadow: 0 15px 30px rgba(16, 185, 129, 0.15);
    }
    
    .populer-kart:hover {
        transform: translateY(-10px) scale(1.02);
    }
    
    .popular-badge {
        position: absolute;
        top: -15px;
        right: 20px;
        background: linear-gradient(135deg, #10B981, #059669);
        color: white;
        padding: 8px 15px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 5px;
        z-index: 1;
    }
    
    .paket-header {
        text-align: center;
        margin-bottom: 25px;
    }
    
    .paket-icon {
        font-size: 2.5rem;
        color: #10B981;
        margin-bottom: 15px;
    }
    
    .paket-header h3 {
        color: #1F2937;
        font-size: 1.5rem;
        margin-bottom: 5px;
        font-weight: 700;
    }
    
    .paket-tip {
        color: #10B981;
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 5px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .paket-aciklama {
        color: #6B7280;
        font-size: 0.95rem;
        font-style: italic;
        margin-top: 5px;
    }
    
    /* Fiyat Bölümü */
    .paket-fiyat {
        text-align: center;
        margin-bottom: 25px;
        padding-bottom: 25px;
        border-bottom: 1px solid #e5e7eb;
    }
    
    .normal-fiyat {
        font-size: 2rem;
        color: #9CA3AF;
        text-decoration: line-through;
        margin-bottom: 5px;
    }
    
    .indirimli-fiyat {
        font-size: 2.5rem;
        font-weight: 700;
        color: #10B981;
        margin: 10px 0;
    }
    
    .fiyat-not {
        color: #6B7280;
        font-size: 0.9rem;
        margin-top: 10px;
        background: #f0fdf4;
        padding: 8px 15px;
        border-radius: 8px;
        display: inline-block;
        border: 1px dashed #10B981;
    }
    
    /* Özellikler */
    .paket-ozellikler ul {
        list-style: none;
        padding: 0;
        margin-bottom: 30px;
        flex-grow: 1;
    }
    
    .paket-ozellikler li {
        padding: 10px 0;
        color: #4B5563;
        display: flex;
        align-items: flex-start;
        gap: 10px;
        line-height: 1.5;
        border-bottom: 1px solid #f3f4f6;
    }
    
    .paket-ozellikler li:last-child {
        border-bottom: none;
    }
    
    .paket-ozellikler i {
        color: #10B981;
        margin-top: 3px;
        flex-shrink: 0;
    }
    
    /* Butonlar */
    .paket-butonlar {
        margin-top: auto;
    }
    
    .btn {
        display: inline-block;
        padding: 12px 24px;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        text-align: center;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        font-size: 1rem;
    }
    
    .btn-primary {
        background: #10B981;
        color: white;
        border: 2px solid #10B981;
    }
    
    .btn-primary:hover {
        background: #059669;
        border-color: #059669;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(16, 185, 129, 0.2);
    }
    
    .btn-whatsapp {
        background: #25D366;
        color: white;
        border: 2px solid #25D366;
    }
    
    .btn-whatsapp:hover {
        background: #128C7E;
        border-color: #128C7E;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(37, 211, 102, 0.2);
    }
    
    .btn-outline {
        background: transparent;
        color: #10B981;
        border: 2px solid #10B981;
    }
    
    .btn-outline:hover {
        background: #10B981;
        color: white;
        transform: translateY(-2px);
    }
    
    .btn-group {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 30px;
        flex-wrap: wrap;
    }
    
    .w-full {
        width: 100%;
    }
    
    .btn-lg {
        padding: 15px 30px;
        font-size: 1.1rem;
    }
    
    /* Ekstra Özellikler */
    .ekstra-ozellikler-section {
        padding: 80px 0;
        background: white;
    }
    
    .ekstra-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
        margin-top: 30px;
    }
    
    .ekstra-kart {
        background: #f8fafc;
        border-radius: 12px;
        padding: 30px;
        text-align: center;
        transition: all 0.3s ease;
        border-top: 4px solid #10B981;
    }
    
    .ekstra-kart:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(16, 185, 129, 0.1);
        background: white;
    }
    
    .ekstra-icon {
        font-size: 2.5rem;
        color: #10B981;
        margin-bottom: 20px;
    }
    
    .ekstra-kart h3 {
        color: #1F2937;
        font-size: 1.3rem;
        margin-bottom: 20px;
        font-weight: 600;
    }
    
    .ekstra-ozellikler {
        list-style: none;
        padding: 0;
        text-align: left;
    }
    
    .ekstra-ozellikler li {
        padding: 8px 0;
        color: #4B5563;
        display: flex;
        align-items: flex-start;
        gap: 10px;
        font-size: 0.95rem;
    }
    
    .ekstra-ozellikler i {
        color: #10B981;
        margin-top: 3px;
        flex-shrink: 0;
    }
    
    /* Pazaryeri Section */
    .pazaryeri-section {
        padding: 80px 0;
        background: #f8fafc;
    }
    
    .pazaryeri-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 20px;
        margin-top: 40px;
    }
    
    .pazaryeri-item {
        background: white;
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0,0,0,0.05);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
    }
    
    .pazaryeri-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        background: #f0fdf4;
    }
    
    .pazaryeri-item i {
        font-size: 2rem;
        color: #10B981;
    }
    
    .pazaryeri-item span {
        color: #1F2937;
        font-weight: 500;
        font-size: 0.9rem;
    }
    
    .pazaryeri-ihracat {
        margin-top: 60px;
        text-align: center;
    }
    
    .pazaryeri-ihracat h3 {
        color: #1F2937;
        font-size: 1.5rem;
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }
    
    .pazaryeri-ihracat h3 i {
        color: #3B82F6;
    }
    
    .ihracat-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 20px;
        max-width: 600px;
        margin: 0 auto;
    }
    
    .ihracat-item {
        background: linear-gradient(135deg, #3B82F6, #60A5FA);
        color: white;
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
    }
    
    .ihracat-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(59, 130, 246, 0.2);
    }
    
    .ihracat-item i {
        font-size: 2rem;
    }
    
    /* CTA Section */
    .cta-section {
        padding: 80px 0;
        background: linear-gradient(135deg, #1F2937, #374151);
        color: white;
        text-align: center;
    }
    
    .cta-content h2 {
        color: white;
        font-size: 2.5rem;
        margin-bottom: 20px;
        font-weight: 700;
    }
    
    .cta-content p {
        color: #D1D5DB;
        font-size: 1.2rem;
        max-width: 600px;
        margin: 0 auto 30px;
        line-height: 1.6;
    }
    
    .cta-buttons {
        display: flex;
        gap: 20px;
        justify-content: center;
        flex-wrap: wrap;
    }
    
    /* Responsive */
    @media (max-width: 1200px) {
        .paketler-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
    
    @media (max-width: 768px) {
        .paketler-grid {
            grid-template-columns: 1fr;
        }
        
        .ekstra-grid {
            grid-template-columns: 1fr;
        }
        
        .pazaryeri-grid {
            grid-template-columns: repeat(2, 1fr);
        }
        
        .cta-buttons {
            flex-direction: column;
            align-items: center;
        }
        
        .btn-lg {
            width: 100%;
            max-width: 300px;
        }
        
        .section-title h2 {
            font-size: 2rem;
        }
        
        .hero {
            padding: 60px 0;
        }
        
        .paketler-section,
        .ekstra-ozellikler-section,
        .pazaryeri-section,
        .cta-section {
            padding: 60px 0;
        }
        
        .btn-group {
            flex-direction: column;
            align-items: center;
        }
        
        .btn-group .btn {
            width: 100%;
            max-width: 300px;
        }
    }
    
    @media (max-width: 480px) {
        .paket-kart {
            padding: 20px;
        }
        
        .pazaryeri-grid {
            grid-template-columns: 1fr;
        }
        
        .indirimli-fiyat {
            font-size: 2rem;
        }
        
        .normal-fiyat {
            font-size: 1.5rem;
        }
    }
</style>

<!-- WhatsApp Float Button -->
<a 
    href={`https://wa.me/${whatsappNumber}?text=Merhaba,%20SEO%20ve%20Pazarlama%20Paketleri%20hakkında%20bilgi%20almak%20istiyorum`} 
    target="_blank" 
    class="whatsapp-float"
>
    <i class="fab fa-whatsapp"></i>
</a>

<!-- JavaScript -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const whatsappFloat = document.querySelector('.whatsapp-float');
        if (whatsappFloat) {
            whatsappFloat.addEventListener('click', function() {
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = 'scale(1)';
                }, 150);
            });
        }
        
        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    });
</script>

