---
// src/pages/sitemap.xml.astro
const siteUrl = 'https://isdeyeter.com';
const lastMod = new Date().toISOString().split('T')[0];

// Tüm sayfalarınızın listesi
const pages = [
  // Ana sayfalar - Yüksek öncelik
  { url: '/', priority: 1.0, changefreq: 'daily' },
  
  // Yapay Zeka sayfaları
  { url: '/ai-destek-chatbot', priority: 0.9, changefreq: 'weekly' },
  { url: '/robot-server', priority: 0.9, changefreq: 'weekly' },
  { url: '/ai-robot', priority: 0.9, changefreq: 'weekly' },
  { url: '/e-mutabakat', priority: 0.9, changefreq: 'weekly' },
  
  // Yazılım sayfaları
  { url: '/dijital-isler', priority: 0.8, changefreq: 'weekly' },
  { url: '/e-ticaret-paketleri', priority: 0.8, changefreq: 'weekly' },
  { url: '/web-paketleri', priority: 0.8, changefreq: 'weekly' },
  { url: '/muhasebe-paketleri', priority: 0.8, changefreq: 'weekly' },
  { url: '/muhasebe-programinin-ozellikleri', priority: 0.8, changefreq: 'weekly' },
  { url: '/seo-ve-pazarlama-paketleri', priority: 0.8, changefreq: 'weekly' },
  { url: '/neden-bulut-muhasebe-yazilimi', priority: 0.8, changefreq: 'weekly' },
  { url: '/dijital-isler-ekibi', priority: 0.8, changefreq: 'weekly' },
  { url: '/dijital-pazarlama-hizmetleri', priority: 0.8, changefreq: 'weekly' },
  
  // Donanım & Server
  { url: '/it-cozumleri', priority: 0.8, changefreq: 'weekly' },
  { url: '/sunucu-kiralama', priority: 0.8, changefreq: 'weekly' },
  { url: '/domain-hosting', priority: 0.8, changefreq: 'weekly' },
  { url: '/cpanel-hosting', priority: 0.8, changefreq: 'weekly' },
  { url: '/ekonomik-hosting', priority: 0.8, changefreq: 'weekly' },
  { url: '/ssl-sertifikasi', priority: 0.8, changefreq: 'weekly' },
  
  // Hizmetler
  { url: '/psikolog-hizmetleri', priority: 0.7, changefreq: 'weekly' },
  { url: '/online-psikolog', priority: 0.7, changefreq: 'weekly' },
  { url: '/temizlik', priority: 0.7, changefreq: 'weekly' },
  { url: '/nakliyat', priority: 0.7, changefreq: 'weekly' },
  { url: '/tamirat', priority: 0.7, changefreq: 'weekly' },
  { url: '/tadilat', priority: 0.7, changefreq: 'weekly' },
  { url: '/organizasyon', priority: 0.7, changefreq: 'weekly' },
  { url: '/ozel-ders', priority: 0.7, changefreq: 'weekly' },
  { url: '/online-psikolog-randevu', priority: 0.7, changefreq: 'weekly' },
  
  // Şirket sayfaları
  { url: '/gizlilik-politikasi', priority: 0.6, changefreq: 'monthly' },
  { url: '/iletisim', priority: 0.6, changefreq: 'monthly' },
  { url: '/bayimiz-olun', priority: 0.5, changefreq: 'monthly' },
  { url: '/sitemap', priority: 0.3, changefreq: 'monthly' },
  { url: '/isdeyeter', priority: 0.8, changefreq: 'weekly' },
];
---

<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1"
        xmlns:video="http://www.google.com/schemas/sitemap-video/1.1"
        xmlns:news="http://www.google.com/schemas/sitemap-news/0.9"
        xmlns:mobile="http://www.google.com/schemas/sitemap-mobile/1.0"
        xmlns:pagemap="http://www.google.com/schemas/sitemap-pagemap/1.0"
        xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {
    pages.map(page => `
  <url>
    <loc>${siteUrl}${page.url}</loc>
    <lastmod>${lastMod}</lastmod>
    <changefreq>${page.changefreq}</changefreq>
    <priority>${page.priority}</priority>
  </url>
    `).join('')
  }
</urlset>